datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id
  username     String        @unique
  password     String
  money        Int           @default(0)
  admin        Boolean       @default(false)
  registertime String
  groups       Group[]
  invites      GroupInvite[]
}

model Group {
  id        String        @id
  name      String
  users     User[]
  startdate String
  enddate   String
  interval  Int //number of days
  bet       Int //amount of money, in dollars, each person bets
  pot       Int //the current pot
  logs      GroupLog[]
  invites   GroupInvite[]
}

model GroupInvite {
  id        String @id
  startdate String
  enddate   String
  groupid   String
  group     Group  @relation(fields: [groupid], references: [id])
  user      User   @relation(fields: [userid], references: [id])
  userid    String
}

model GroupLog {
  id      String @id
  title   String
  content String
  groupid String
  group   Group  @relation(fields: [groupid], references: [id])
}
